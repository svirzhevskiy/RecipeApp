{
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": {
          "path": "./Logs/log-.txt", 
          "rollingInterval": "Day", 
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ],
    "Properties": {
      "Application": "Recipe"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "localPostgres": "Host=localhost; Port=5432; Database=RecipeMonster; User ID=postgres; password=postgres;"
  },
  "CacheSettings": {
    "SlidingExpiration": 1
  }
}
